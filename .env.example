# AWS Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# AWS Credentials (for local development only)
# In production, use IAM roles instead
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=us-east-1

# Optional: Use a specific AWS profile from ~/.aws/credentials
# AWS_PROFILE=lifehacking-dev

# Google Cloud / Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=~/path/to/your/firebase-credentials.json

# Application Configuration
# These override values in appsettings.json
ASPNETCORE_ENVIRONMENT=Development

# Firebase Configuration
Firebase__ProjectId=your-firebase-project-id
Firebase__DatabaseUrl=https://your-project.firebaseio.com
Firebase__EmulatorHost=localhost:8080

# AWS S3 Configuration (optional override)
AWS__S3__BucketName=lifehacking-category-images-dev
AWS__S3__Region=us-east-1
AWS__CloudFront__Domain=your-cloudfront-distribution.cloudfront.net

# Sentry Configuration (optional)
Sentry__Enabled=false
Sentry__Dsn=your-sentry-dsn-here
Sentry__Environment=Development
